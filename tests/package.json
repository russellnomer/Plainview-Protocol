{
  "name": "plainview-protocol-audits",
  "version": "1.0.0",
  "description": "Public accountability and integrity audit suite for The Plainview Protocol",
  "scripts": {
    "audit": "playwright test",
    "audit:smoke": "playwright test --grep @smoke",
    "audit:security": "playwright test tests/accountability/",
    "audit:e2e": "playwright test tests/e2e/",
    "report": "playwright show-report",
    "postinstall": "playwright install --with-deps chromium"
  },
  "keywords": ["accountability", "audit", "playwright", "plainview-protocol"],
  "author": "Plainview Protocol",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@axe-core/playwright": "^4.8.1"
  }
}
